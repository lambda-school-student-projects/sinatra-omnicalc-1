<h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= 
      params.fetch("user_apr").to_f.to_fs(:percentage, {:precision => 4})
    %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= 
      params.fetch("user_years").to_i 
    %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= 
      params.fetch("user_pv").to_f.to_fs(:currency) 
    %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= 
      calculate_payments
    %>
    
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
